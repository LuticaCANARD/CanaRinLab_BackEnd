// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-kysely"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
generator erd {
  provider = "prisma-erd-generator"
  output = "./schema.md"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
