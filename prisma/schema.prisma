// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-kysely"
  output = "../src/TYPES"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"

}
generator erd {
  provider = "prisma-erd-generator"
  output = "./schema.md"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}


model DateWeek {
  DateId              Int @id
  STCS_DT             DateTime
  DAY_DV_CD_NM        String
  BIZ_DD_STG_CD_NM    String
  StnStats            RailStnStat[]
}
model RailStnStat{
  DateId                Int   
  Dates                 DateWeek @relation(references: [DateId], fields:[DateId]) 
  EXTR_STN_CD           Int
  StationName           StnName  @relation(references: [HR_UNIT_HR_DV_CD], fields:[HR_UNIT_HR_DV_CD]) 
  HR_UNIT_HR_DV_CD      Int
  ABRD_PRNB             Int
  GOFF_PRNB             Int
  @@id([DateId,EXTR_STN_CD,HR_UNIT_HR_DV_CD])
  @@unique([DateId,EXTR_STN_CD,HR_UNIT_HR_DV_CD])
  @@index([HR_UNIT_HR_DV_CD])
}


model StnName{
  HR_UNIT_HR_DV_CD Int @id
  STN_NM           String
  StnStat          RailStnStat[]
}

model VoteExecutor{
  ServerId Int 
  UserId Int
  @@id([ServerId,UserId])
}

//-----------------------디코봇용


model ServerPref{
  prefKey String @id
  value String 
}

model DiscordServer{
  GuildId String @id
}

//-----------------------카지노용

model CasinoRoles{
  Priority Int @id @default(autoincrement())
  RoleName String 
  userId String?

}
model CasinoMember{
  name String?
  userId String @id
  intern Boolean
}

model CasinoEvent{
  time DateTime
  userId String
  @@id([time,userId])
}
model CasinoChat{
  id String @id
  chatId String
  
}
